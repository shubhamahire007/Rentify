<% layout ('/layouts/boilerplate') %>

<body class="cont">
  <div>
    <br>
   
    <div class="container-fluid">
      <form action="/listings" method="GET" class="filter-form">
        <input type="text" name="location" placeholder="Location" value="<%= query.location || '' %>">
        <input type="number" name="minPrice" placeholder="Min Price" value="<%= query.minPrice || '' %>">
        <input type="number" name="maxPrice" placeholder="Max Price" value="<%= query.maxPrice || '' %>">
        <select name="propertyType">
          <option value="">Property Type</option>
          <option value="PG" <%=query.propertyType === 'PG' ? 'selected' : '' %>>PG</option>
          <option value="Room" <%= query.propertyType === 'Room' ? 'selected' : '' %>>Room</option>
          <option value="Flat" <%= query.propertyType === 'Flat' ? 'selected' : '' %>>Flat</option>
          <option value="Villa" <%= query.propertyType === 'Villa' ? 'selected' : '' %>>Villa</option>
        </select>
        <button type="submit">Filter</button>
      </form>
    </div>
    <br>

    <div class="row">
      <% for( let listing of allListings) { %>
      <div class="card listing-card" style="width: 20rem">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing image"
          />

          <div class="card-img-overlay">
            <button class="btn-dark">click to see details</button>
          </div>

          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
              <br />
              &#8377; <%= listing.price.toLocaleString("en-in") %> / month
            </p>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</body>
