<% layout ('/layouts/boilerplate') %>
<body>
  <div class="mt-3">
    <!-- <div class="row mt-3"> -->
    <div class="col-5 offset-3">
      <h3><%= data.title %></h3>
    </div>
    <div class="card-show col-5 offset-3">
      <img src="<%= data.image.url %>" alt="image" class="card-img-top show-img" />
      <div class="card-body">
        <p class="card-text">Owned by <i><%= data.owner.username %></i></p>
        <p class="card-text"><%= data.description %></p>
        <p class="card-text">
          &#8377;<%= data.price.toLocaleString("en-in") %> / month
        </p>
        <p class="card-text">&#x1F4DE;+91 <%= data.contact %> , <%= data.location %> , <%= data.country %></p>
      </div>
    </div>
    <% if(currentUser && currentUser._id.equals(data.owner._id)) { %>
    <div class="btns mt-29">
      <a
        href="/listings/<%= data._id %>/edit"
        class="btn my_btn btn-dark offset-3"
        >Edit</a
      >
      <form action="/listings/<%= data._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
  </div>
  <% } %>

  <div class="col-5 offset-3">
    <% if(currentUser) { %>
    <hr />
    <h4>Leave Review</h4>
    <form
      action="/listings/<%= data._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
     <label for="rating" class="form-label mt-3">Rating</label>
      <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="comment"
          id="comment"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Add some comments</div>
      </div>
      <button class="btn my_btn btn-dark mb-3 mt-3">Submit</button>
    </form>
    <% } %>

    <% if(data.reviews.length > 0) { %>
      <hr />
    <p><b>All Reviews</b></p>
      <% } %>
    <div class="row">
      <% for(let review of data.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h6 class="card-title">@<%= review.author.username %></h6>
          <p class="card-text starability-result" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <% if(currentUser && !currentUser._id.equals(data.reviews.author)) { %>
        <form
          action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
          class="mb-3"
        >
          <button class="btn btn-sm btn-dark mt-2">
            Delete
          </button>
        </form>
        <% } %>
      </div>
      <% } %>
    </div>
    <br>
    <h3>Where you'll be</h3>
    <div id="map" style="height: 400px; width:100%"></div>
  </div>  
  

  <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OpenLayers Map Example</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
</head>
<body>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    
    async function getCoordinates(address) {
      const apiKey = "fb6b4ca38f744d2853e966d02661ce0e"; // Replace with your PositionStack key
      const response = await fetch(`https://api.positionstack.com/v1/forward?access_key=${apiKey}&query=<%= data.location %>`);
      const data = await response.json();
      return data.data[0]; // Returns latitude & longitude
  }
  
  async function loadMap() {
    const location = await getCoordinates(`<%= data.location %>`);
    const map = L.map('map').setView([location.latitude, location.longitude], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap'
    }).addTo(map);

    L.marker([location.latitude, location.longitude]).addTo(map)
      <!-- .bindPopup(`<%= data.location%> Property Location`) -->
      .openPopup();
}

loadMap();

  </script>
</body>
</html>

</body>


